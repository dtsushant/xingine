{
  "name": "xingine",
  "version": "1.0.6",
  "description": "A useful TypeScript library for decoding and validation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsc --project tsconfig.json && tsc-alias",
    "prepare": "npm run build",
    "push": "yalc push --changed",
    "yalc:dev": "npm run clean && npm run build && npm run push",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "typescript",
    "library",
    "decoder",
    "validation"
  ],
  "author": "Sushant Pandey <dtsushant@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/dtsushant/xingine.git"
  },
  "bugs": {
    "url": "https://github.com/dtsushant/xingine/issues"
  },
  "homepage": "https://github.com/dtsushant/xingine#readme",
  "peerDependencies": {
    "decoders": "^2.7.0",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "decoders": "^2.7.0",
    "jest": "^30.0.0",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "ts-jest": "^29.4.0",
    "tsc-alias": "^1.8.2",
    "typescript": "^5.0.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.(e2e-)?spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s",
      "!**/dist/**"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  }
}
